RewriteEngine On

# Abilita CORS per tutte le richieste API
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

# Gestisci richieste OPTIONS (preflight)
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Reindirizza tutte le richieste verso index.php se il file non esiste
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L,E=ORIGINAL_PATH:$1]

# Previeni accesso diretto ai file PHP delle API (tranne debug e test)
RewriteCond %{THE_REQUEST} \s/+[^\s]*/(BaseAPI|ClientiAPI|CollaboratoriAPI|CommesseAPI|TaskAPI|TariffeAPI|GiornateAPI|FattureAPI)\.php[\s?] [NC]
RewriteRule ^ - [F]